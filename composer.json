{
    "name": "cradeq/commonmark-br-extension",
    "type": "commonmark-extension",
    "description": "Allows HTML break tags to be used in Markdown, while still escaping or stripping all other HTML input.",
    "keywords": ["commonmark", "markdown", "extension", "break"],
    "homepage": "https://github.com/Cradeq/commonmark-br-extension",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "league/commonmark": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4"
    },
    "autoload": {
        "psr-4": {
            "Cradeq\\CommonMark\\BreakTagExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cradeq\\CommonMark\\BreakTagExtension\\Tests\\": "tests/"
        }
    }
}
